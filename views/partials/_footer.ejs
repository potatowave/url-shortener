<% if (userid) { %>
  Logged in as <%= users[userid].email %>.
  <form action="/urls/logout" method="POST" style="display: inline;">
  <input type="submit" value="Logout">

  </form>

<% } else { %>

    <form action="/urls/login" method="POST" style="">
      <label for="User">Email:</label>
      <input id="user" type="user" name="user" placeholder="" style="width: 100px">
      <label for="password">Password:</label>
      <input id="password" type="password" name="password" placeholder="" style="width: 100px">
      <input type="submit" value="Log In" style="display: inline;">
      <a href="/urls/register">Register</a><br><br>
    </form>

<% } %>